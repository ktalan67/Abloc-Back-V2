<form method="post" action="{{ path('access_level_delete', {'id': access_level.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ access_level.id) }}">
    <button class="btn">Delete</button>
</form>
